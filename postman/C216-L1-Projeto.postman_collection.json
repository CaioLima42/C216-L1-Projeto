							"pm.test(\"Response should confirm update\", function () {\r",
							"    pm.expect(pm.response.json().message).to.eql('Aluno atualizado com sucesso!');\r",
							"});\r",
							"\r",
							"// Validar se o aluno foi atualizado corretamente\r",
							"pm.sendRequest(\"http://127.0.0.1:8000/api/v1/alunos/1\", function (err, res) {\r",
							"    pm.test(\"Os atributos do aluno foram atualizados\", function () {\r",
							"        let aluno = res.json();\r",
							"        pm.expect(aluno.nome).to.eql(\"Atualizado\");\r",
							"        pm.expect(aluno.idade).to.eql(10);\r",
							"        pm.expect(aluno.mae).to.eql(\"Mae\");\r",
							"        pm.expect(aluno.pai).to.eql(\"Pai\"); \r",
							"    });\r",
							"});"
						],
